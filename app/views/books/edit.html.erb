<% if @book.user == current_user %>
<div  class="container">
  <div  class="row">
    <div  class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2  class="alert_h2"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<%= form_for(@book) do |f| %>
  <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title, autofocus:true, placeholder:"@book.title", class: "book_title" %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :opinion, autofocus:true, placeholder:"@book.opinion", class: "book_body" %>
  </div>

  <div class="actions row">
    <%= f.submit "Update Book"%>
  </div>
  <% end %>
  <div>
    <%= link_to "Show", book_path(@book), class: "book_#{(@book.id)}" %>|
    <%= link_to "Back", books_path, class: "back" %>
    </div>
    <div class='col-md-3'></div>
</div>
      </div>
    </div>
<% end %>
