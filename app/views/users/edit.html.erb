<div  class="container">

<h2>User info</h2>
<% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2  class="alert_h2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for(@user) do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, placeholder:"@user.name", class: "name" %>
  </div>

  <div class="field">
    <label for="ProfileImage">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
  </div>

  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, placeholder:"@user.introduction", class: "introduction" %>
  </div>

  <%= f.submit "Update User" %>

  </div>
<% end %>
