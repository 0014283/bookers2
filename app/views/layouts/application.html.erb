<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
        <li><%= link_to user_path(current_user.id), class: "home" do %><span class="glyphicon glyphicon-home" aria-hidden="true"> Home<% end %></span></li>
          <li><%= link_to users_path, class: "users" do %><span class="glyphicon glyphicon-user" aria-hidden="true"> Users<% end %></span></li>
          <li><%= link_to books_path, class: "books" do %><span class="glyphicon glyphicon-book" aria-hidden="true"> Books<% end %></span>
</li>
          <li><%= link_to destroy_user_session_path, method: :delete, class: "logout" do %><span class="glyphicon glyphicon-log-out" aria-hidden="true"> logout<% end %></span>
</li>
        <% else %>
          <li><%= link_to root_path, class: "home" do %><span class="glyphicon glyphicon-home" aria-hidden="true">
Home<% end %></span></li>
          <li><%= link_to top_about_path, class: "about" do %><span class="glyphicon glyphicon-link" aria-hidden="true"> About<% end %></span>
</li>
          <li><%= link_to new_user_registration_path, class: "sign_up" do %><span class="glyphicon glyphicon-edit" aria-hidden="true"> sign  up<% end %></span>
</li>
          <li><%= link_to new_user_session_path, class: "sign_in" do %><span class="glyphicon glyphicon-log-in" aria-hidden="true"> login<% end %></span>
</li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>
  </body>
</html>

    <%= yield %>

    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  </body>
</html>
